                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                                <Image Source="link_image.svg" WidthRequest="40" HeightRequest="40" HorizontalOptions="Center"></Image>
                                <!--#FFEE51 #FFF27E-->
                                <Label MaximumWidthRequest="140" HorizontalTextAlignment="Center" Text="Получить токен у бота BotFather" TextColor="#FFEE51" VerticalTextAlignment="Center"></Label>
                            </StackLayout>
                            <Button HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Transparent" Command="{Binding OpenBotFatherCommand}"></Button>
                        </Grid>
                    </Border>
                </StackLayout>

                <ImageButton Command="{Binding OpenOptionsTokenCommand}" HorizontalOptions="End" VerticalOptions="Start" HeightRequest="30" WidthRequest="30" Source="cross2.png"></ImageButton>

            </Grid>
        </Frame>

        <!--Настройки приложения-->
        <Frame Grid.Row="2" Padding="20, 50, 20, 0" Grid.RowSpan="2" IsVisible="{Binding IsPageSettingsApplaction}" BackgroundColor="Transparent" BorderColor="Transparent" CornerRadius="0">
            <Grid>
                <StackLayout Spacing="35" VerticalOptions="Start">
                    <StackLayout HorizontalOptions="Start" VerticalOptions="Start" Spacing="10" Orientation="Horizontal">
                        <Image Source="settings.svg" VerticalOptions="Center" WidthRequest="40" HeightRequest="40" BackgroundColor="Transparent"></Image>
                        <StackLayout Spacing="2" VerticalOptions="Center">
                            <Label FontAttributes="Bold" Text="{language:Translate Settings}" FontSize="Small" TextColor="White"></Label>
                            <Label Text="{language:Translate ApplicationSettings}" FontSize="Micro" TextColor="Gray"></Label>
                        </StackLayout>
                    </StackLayout>

                    <StackLayout Spacing="10">
                        <Label Margin="5, 0, 0, 0" Text="{language:Translate Language}" FontSize="Small" TextColor="White" FontAttributes="Bold"></Label>
                        <Border BackgroundColor="Transparent" Stroke="Gray">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5,5,5,5" />
                            </Border.StrokeShape>
                            <Picker Margin="5, 0, 5, 0" x:Name="pickerLanguage" Title = "{language:Translate Language}" SelectedIndexChanged="Picker_SelectedIndexChanged">
                                <Picker.Items>
                                    <x:String>Russian</x:String>
                                    <x:String>English</x:String>
                                </Picker.Items>
                            </Picker>
                        </Border>

                        <StackLayout Spacing="2" Margin="0, 10, 0, 0">
                            <Label Margin="5, 0, 0, 0" Text="Уведомления" FontSize="Small" TextColor="White" FontAttributes="Bold"></Label>
                            <StackLayout Orientation="Vertical" Spacing="-8">
                                <StackLayout Orientation="Horizontal" Spacing="5">
                                    <Label Margin="5, 0, 0, 0" Text="Новое сообщение" FontSize="Small" TextColor="White" VerticalOptions="Center"></Label>
                                    <CheckBox IsChecked="{Binding IsNotificationNewMessage, Mode=TwoWay}" Color="WhiteSmoke" VerticalOptions="Center"></CheckBox>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="5">
                                    <Label Margin="5, 0, 0, 0" Text="Новая заявка" FontSize="Small" VerticalOptions="Center" TextColor="White"></Label>
                                    <CheckBox IsChecked="{Binding IsNotificationNewSaveAnswer, Mode=TwoWay}" Color="WhiteSmoke" VerticalOptions="Center"></CheckBox>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal" Spacing="5">
                                    <Label Margin="5, 0, 0, 0" Text="Новый пользователь" FontSize="Small" TextColor="White" VerticalOptions="Center"></Label>
                                    <CheckBox IsChecked="{Binding IsNotificationNewUser, Mode=TwoWay}" Color="WhiteSmoke" VerticalOptions="Center"></CheckBox>
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>

                        <StackLayout Spacing="2" Margin="0, 10, 0, 0">
                            <Label Margin="5, 0, 0, 0" Text="Фоновая работа" FontSize="Small" TextColor="White" FontAttributes="Bold"></Label>
                            <StackLayout Orientation="Horizontal" Spacing="5">
                                <Label Margin="5, 0, 0, 0" Text="Работа в фоновом режиме" FontSize="Small" TextColor="White" VerticalOptions="Center"></Label>
                                <CheckBox IsChecked="{Binding IsBackgroundTask}" Color="WhiteSmoke" VerticalOptions="Center"></CheckBox>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
                <ImageButton Command="{Binding OpenSettingApplicationCommand}" HorizontalOptions="End" VerticalOptions="Start" HeightRequest="30" WidthRequest="30" Source="cross2.png"></ImageButton>
            </Grid>
        </Frame>


        <!--Отчет разработчикам-->
        <Frame Grid.Row="2" Padding="20, 50, 20, 0" Grid.RowSpan="2" IsVisible="{Binding IsPageSendReport}" BackgroundColor="Transparent" BorderColor="Transparent" CornerRadius="0">
            <Grid>
                <StackLayout Spacing="35" VerticalOptions="Start">

                    <StackLayout HorizontalOptions="Start" VerticalOptions="Start" Spacing="10" Orientation="Horizontal">
                        <Image Source="settings.svg" VerticalOptions="Center" WidthRequest="40" HeightRequest="40" BackgroundColor="Transparent"></Image>
