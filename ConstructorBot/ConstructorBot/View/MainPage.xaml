                        <Border StrokeShape="RoundRectangle 10, 10, 10, 10" Stroke="Gray" BackgroundColor="Transparent" Padding="5, 0, 5, 0">
                            <Editor HorizontalOptions="FillAndExpand" HeightRequest="150" Placeholder="Проблема" BackgroundColor="Transparent"></Editor>
                        </Border>
                        <Button HorizontalOptions="FillAndExpand" Command="{Binding OpenPageSendReportCommand}" Text="Отправить" TextColor="White" BackgroundColor="#2B3A62"></Button>
                    </StackLayout>
                </StackLayout>
                <ImageButton Command="{Binding OpenPageSendReportCommand}" HorizontalOptions="End" VerticalOptions="Start" HeightRequest="30" WidthRequest="30" Source="cross2.png"></ImageButton>
            </Grid>
        </Frame>


        <!--Просмотр схраненных заявок-->
        <Frame Grid.Row="2" Padding="20, 50, 20, 20" Grid.RowSpan="2" IsVisible="{Binding IsPageViewRequest}" BackgroundColor="Transparent" BorderColor="Transparent" CornerRadius="0">
